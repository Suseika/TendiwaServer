<?xml version="1.0" encoding="UTF-8"?>
<project name="Erpoge Server">
    <property environment="env"/>
    <target name="all">
    </target>
    <target name="jar" depends="compile">
        <delete file="tendiwa.jar"/>
        <jar destfile="tendiwa.jar">
            <fileset dir="bin/">
                <exclude name="tests/**"/>
            </fileset>
            <fileset dir="resources/"/>
        </jar>
    </target>
    <target name="compile">
        <javac
                destdir="bin"
                srcdir="src"
                includeantruntime="false"
                debug="on"
                debuglevel="lines,vars,source"
                classpath="lib/*.jar"
                />
    </target>
</project>

